<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/coordinatorLayout"
    tools:context=".Fragments.OverView">

    <TextView
        android:elevation="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        android:textColor="@color/colorPrimary"
        android:text="TrashApp"
        style="@style/TextAppearance.MaterialComponents.Headline1"
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/chal_owner" />

    <TextView
        android:elevation="10dp"
        android:layout_below="@id/chal_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginStart="5dp"
        android:textColor="@color/colorPrimary"
        android:text="Constantine El-khroub"
        style="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        android:id="@+id/chal_address" />

    <TextView
        android:elevation="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:textColor="@color/view"
        android:layout_alignParentEnd="true"
        android:text="TrashApp"
        style="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        android:id="@+id/chal_date" />

    <org.mapsforge.map.android.view.MapView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/mapView"
        android:layout_below="@id/chal_address"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"/>


    <LinearLayout
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <Button
        android:visibility="gone"
        android:id="@+id/non_participate"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="Abort"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"/>

        <Button
            android:id="@+id/participate"
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            android:text="take the challenge"
            android:textColor="@color/white"
            android:background="@color/colorAccent"/>

    </LinearLayout>

</RelativeLayout>