<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Settings">

    <TextView
        android:id="@+id/text6"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paramètre application " />
    <View
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view"
        android:layout_toEndOf="@+id/text6"
        android:layout_alignBottom="@+id/text6"
        />

    <TextView
        android:layout_marginBottom="18dp"
        android:id="@+id/text7"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/text6"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recevoir les notification :" />

    <Switch
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:elevation="10dp"
        android:translationZ="2dp"
        android:stateListAnimator="@null"
        android:id="@+id/switch_lg"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/text7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginBottom="8dp"
        android:id="@+id/text8"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/text7"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rapporter un bug :" />

    <ImageView
        android:src="@drawable/ic_bug_report_black_24dp"
        android:id="@+id/rapport"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:elevation="10dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/text8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="14dp"
        android:id="@+id/desactiver"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/text8"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Désactiver mon compte" />
    <View
        android:id="@+id/li"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view"
        android:layout_below="@+id/desactiver"
        />

</RelativeLayout>